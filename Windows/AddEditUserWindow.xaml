<Window x:Class="WpfApp1.Windows.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        mc:Ignorable="d"
        Title="AddEditUserWindow" Height="450" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center">
            <TextBlock Text="ПОЛЬЗОВАТЕЛЬ" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="ФИО" Margin="0,30,0,0"/>
            <TextBox x:Name="FullName"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="Login"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="Password"/>
            <Button Content="Сохранить" Margin="0,5,0,0" Click="Save_Click"/>
            <Button Content="Отмена" Margin="0,5,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
